<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/template_gray"
    tools:context=".SignUp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_148"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="2dp"
        android:text="Continue"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordDef" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="298dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/roboto"
        android:text="Password"
        android:textColor="@color/template_black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/input_Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/input_Password"
        app:layout_constraintTop_toBottomOf="@+id/input_Contact_Number" />

    <EditText
        android:id="@+id/input_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_textbox"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="@color/teal_700"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/passwordDef"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="294dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/roboto"
        android:text="Product ID"
        android:textColor="@color/template_black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/input_Product_ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/input_Product_ID"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <EditText
        android:id="@+id/input_Product_ID"
        android:layout_width="319dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rectangle_textbox"
        android:ems="10"
        android:hint="Enter Product ID"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="@color/teal_700"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/contact_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_id" />

    <TextView
        android:id="@+id/contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="259dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/roboto"
        android:text="Conatct Number"
        android:textColor="@color/template_black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/input_Contact_Number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/input_Contact_Number"
        app:layout_constraintTop_toBottomOf="@+id/input_Product_ID" />

    <EditText
        android:id="@+id/input_Contact_Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_textbox"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColorHint="@color/teal_700"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_number" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="317dp"
        android:layout_height="218dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_with_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/undraw_authentication_fsn5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up_with_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle_144"
        android:fontFamily="@font/roboto"
        android:paddingBottom="3dp"
        android:text="Sign Up With Google"
        android:textColor="@color/template_black"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/product_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_with_google"
        app:srcCompat="@drawable/group_166" />

    <TextView
        android:id="@+id/passwordDef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:text="Passwords must be atleast 8 characters long"
        android:textColor="@color/template_black"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@+id/continue_button"
        app:layout_constraintStart_toStartOf="@+id/input_Password"
        app:layout_constraintTop_toBottomOf="@+id/input_Password" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:text="Already a user?"
        android:textColor="@color/template_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="24dp"
        android:text="SignIn"
        android:textAlignment="gravity"
        android:textColor="@color/template_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/continue_button" />
</androidx.constraintlayout.widget.ConstraintLayout>